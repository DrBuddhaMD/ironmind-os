{
  "name": "ironmind-os",
  "version": "0.1.0",
  "private": true,
  "type": "module",
  "main": "dist-electron/main.js",
  "scripts": {
    "dev": "next dev",
    "build": "next build",
    "start": "next start",
    "lint": "eslint",
    "build:electron": "tsc electron/main.ts --outDir dist-electron --esModuleInterop",
    "electron-dev": "concurrently -k \"cross-env NODE_ENV=development electron -r ts-node/register electron/main.ts\" \"npm run dev\"",
    "dist": "npm run build && npm run build:electron && electron-builder",
    "postinstall": "prisma generate",
    "tui": "tsx src/tui/index.tsx"
  },
  "build": {
    "appId": "com.ironmind.os",
    "productName": "IronMind OS",
    "mac": {
      "category": "public.app-category.lifestyle",
      "target": [
        "dmg"
      ]
    },
    "files": [
      "dist-electron/**/*",
      ".next/standalone/**/*",
      "public/**/*",
      "prisma/**/*"
    ],
    "extraResources": [
      "prisma/**/*"
    ]
  },
  "dependencies": {
    "@auth/prisma-adapter": "^2.11.1",
    "@prisma/adapter-better-sqlite3": "^7.4.0",
    "@prisma/client": "^7.4.0",
    "bcryptjs": "^3.0.3",
    "better-sqlite3": "^12.6.2",
    "clsx": "^2.1.1",
    "electron": "^40.4.1",
    "framer-motion": "^12.34.1",
    "ink": "^6.7.0",
    "ink-text-input": "^6.0.0",
    "lucide-react": "^0.574.0",
    "meow": "^14.0.0",
    "next": "16.1.6",
    "next-auth": "^5.0.0-beta.30",
    "prisma": "^7.4.0",
    "react": "19.2.3",
    "react-dom": "19.2.3",
    "react-reconciler": "^0.33.0",
    "recharts": "^3.7.0",
    "tailwind-merge": "^3.4.1",
    "zod": "^4.3.6"
  },
  "devDependencies": {
    "@tailwindcss/postcss": "^4",
    "@types/bcryptjs": "^2.4.6",
    "@types/better-sqlite3": "^7.6.13",
    "@types/node": "^20.19.33",
    "@types/react": "^19.2.14",
    "@types/react-dom": "^19",
    "autoprefixer": "^10.4.24",
    "concurrently": "^9.2.1",
    "cross-env": "^10.1.0",
    "electron-builder": "^26.7.0",
    "eslint": "^9",
    "eslint-config-next": "16.1.6",
    "postcss": "^8.5.6",
    "tailwindcss": "^4",
    "ts-node": "^10.9.2",
    "tsx": "^4.21.0",
    "typescript": "^5",
    "wait-on": "^9.0.4"
  },
  "prisma": {
    "seed": "ts-node prisma/seed.ts"
  }
}